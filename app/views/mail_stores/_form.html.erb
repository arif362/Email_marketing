<link href='https://fonts.googleapis.com/css?family=Open Sans' rel='stylesheet' type='text/css'>
<link href="https://netdna.bootstrapcdn.com/font-awesome/3.0.2/css/font-awesome.css" rel="stylesheet">
<div id="content">
  <h1>Syftet</h1>

  <%= form_for @email do |f| %>

      <div class="form-group col-md-6">
        <%= f.label :subject, '*Subject' %>
        <%= f.text_field :subject, placeholder: 'What would you like to talk about?' %>
      </div>

      <div class="form-group col-md-6">
        <%= f.label :title, '*Title'%>
        <%= f.text_field :title, placeholder: 'Type your title' %>
      </div>

      <div class="form-group col-md-6">
        <%= f.label :recipient, 'Receipent*', class:'icon-envelope' %>
        <%= f.text_field :recipient, placeholder: 'I promise I hate spam too!' %>
      </div>

      <div class="form-group col-md-6">
        <%= f.label :message, 'Message*', class:'icon-comment' %>
        <%= f.text_area :message, placeholder: 'Your message here' %>
      </div>

      <div class="form-group col-md-12">
        <%= f.file_field :attachment, class: 'btn btn-info' %>
        <%= f.submit 'Send', class: 'btn btn-info submit-btn pull-right' %>
      </div>

  <% end %>

</div>
